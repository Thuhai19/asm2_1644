<div class="header">
    <a href="/home"><img width="80px" height="70px"
            src="https://static.vecteezy.com/system/resources/thumbnails/021/769/115/small/toys-logo-free-vector.jpg"
            alt="" srcset=""></a>
    <div class="menu ">
        <a class="tag" style="text-decoration: none;" href="/product/add">Add</a>
    </div>
</div>
<form action="/product/edit/{{ product._id }}" method="post" class="container col-md-8 card bg-light mt-3">
    <h1 class="text-danger text-uppercase text-center mt-3">Edit Product</h1>

    <div class="form-group mt-3">
        <label for="stt" class="text-primary">STT</label>
        <input class="form-control" type="number" name="stt" value="{{ product.stt }}" disabled>
    </div>
    <div class="form-group mt-3">
        <label for="name" class="text-primary">Name</label>
        <input class="form-control" type="text" name="name" required minlength="3" maxlength="30"
            value="{{ product.name }}">
    </div>
    <div class="form-group mt-3">
        <label for="category" class="text-primary">Category</label>
        <input class="form-control" type="text" name="category" value="{{ product.category }}">
    </div>
    <div class="form-group mt-3">
        <label for="number" class="text-primary">Number</label>
        <input class="form-control" type="number" name="number" min="0" max="10" value="{{ product.number }}">
    </div>
    <div class="form-group mt-3">
        <label for="price" class="text-primary">Price</label>
        <input class="form-control" type="text" name="price" value="{{ product.price }}">
    </div>
    <div class="form-group mt-3">
        <label for="image" class="text-primary">Image</label>
        <img src="{{ product.image }}" width="210" height="150">
        <br><br>
        <input class="form-control" type="url" name="image" required value="{{ product.image }}">
    </div>
    <div class="form-group mt-3 mb-3 text-center">
        <input class="btn btn-primary" type="submit" value="Edit">
        <input class="btn btn-success" type="reset" value="Clear">
    </div>
</form>
