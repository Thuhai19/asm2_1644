<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css"
    integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
<div class="header">
    <a href="/home"><img width="80px" height="70px"
            src="https://static.vecteezy.com/system/resources/thumbnails/021/769/115/small/toys-logo-free-vector.jpg"
            alt="" srcset=""></a>
    <div class="menu ">

        <a class="tag" style="text-decoration: none;" href="/product/add">Add</a>
    </div>
    <form class="search" action="/product/search" id="search-box" method="post">
        <input type="text" id="search-text" name="name" placeholder="Search...">
        <button id="search-btn"><i class="fa-solid fa-magnifying-glass"></i></button>
    </form>
</div>
<div class="container col-md-8 text-center">
    <table class="table table-danger">
        <table class="table table-hover">
            <tr>
                <th>STT</th>
                <th>Name</th>
                <th>Image</th>
                <th>Category</th>
                <th>Price</th>

            </tr>
            {{#each product }}
            <tr>
                <td>{{stt}}</td>
                <td>{{name}}</td>
                <td>
                    <a href="/product/detail/{{ _id }}">
                        <img src="{{ image }}" width="210" height="150">
                    </a>
                </td>
                <td>{{category}}</td>
                <td>{{price}}</td>
                <td><a style="text-decoration:none;" href="/product/edit/{{_id}}">Edit</a></td>
                <td><a style="text-decoration:none;" href="/product/delete/{{_id}}">Delete</a></td>
            </tr>
            {{/each}}
        </table>
    </table>
</div>
<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        padding: 20px;
        margin: 0px;
    }

    .header {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        border-bottom: 1px solid lightgray;
    }

    .container {
        margin-top: 30px;
    }

    .tag {
        color: black;
        font-size: 20px;
        position: relative;
        padding-left: 50px;
        margin-top: 50px;
    }

    form .search {
        display: inline-block;
        min-height: 18px;
        position: absolute;
        right: 20px;
        top: 20px;
    }

    #search-box {
        background-color: gray;
        border-radius: 30px;
        background-color: rgb(235, 235, 235);
        position: absolute;
        right: 90px;
    }

    #search-box:hover {
        background: rgb(204, 204, 204);
    }

    #search-box #search-text {
        border: none;
        background-color: #f9f9f9;
        outline: none;
        background: none;
        font-size: 18px;
        width: 0;
        padding: 0;
    }

    #search-box:valid #search-text {
        width: 300px;
        padding: 10px 0px 10px 15px;
    }

    #search-box #search-btn {
        background-color: #fff;
        cursor: pointer;
        border: none;
        padding: 15px;
        border-radius: 50%;
        background-color: rgb(235, 235, 235);
    }

    .mt-3 {
        position: relative;
        top: 10px;
    }
</style>